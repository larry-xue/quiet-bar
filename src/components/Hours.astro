---
import siteData from '../data/site.json';

const { openingHours } = siteData;
---

<section class="hours section" aria-labelledby="hours-title">
  <div class="container container--narrow">
    <h2 id="hours-title" class="section__title">Hours</h2>
    
    <div class="hours__grid">
      <div class="hours__block">
        <h3 class="hours__label">Weekdays</h3>
        <p class="hours__time">{openingHours.weekday}</p>
      </div>
      
      <div class="hours__divider" aria-hidden="true">
        <span class="hours__divider-icon">â—†</span>
      </div>
      
      <div class="hours__block">
        <h3 class="hours__label">Weekends</h3>
        <p class="hours__time">{openingHours.weekend}</p>
      </div>
    </div>
    
    {openingHours.holiday && (
      <p class="hours__holiday">
        <span class="hours__holiday-label">Holiday Hours:</span>
        {openingHours.holiday}
      </p>
    )}
  </div>
</section>

<style>
  .hours {
    text-align: center;
  }
  
  .hours__grid {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-8);
    flex-wrap: wrap;
  }
  
  .hours__block {
    flex: 1;
    min-width: 200px;
    max-width: 300px;
  }
  
  .hours__label {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-2);
  }
  
  .hours__time {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    color: var(--color-secondary);
    margin: 0;
  }
  
  .hours__divider {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    color: var(--color-primary);
    opacity: 0.6;
  }
  
  .hours__divider-icon {
    font-size: var(--text-sm);
  }
  
  .hours__holiday {
    margin-top: var(--space-8);
    padding: var(--space-4);
    background-color: rgba(201, 162, 39, 0.1);
    border-left: 3px solid var(--color-primary);
    text-align: left;
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
  }
  
  .hours__holiday-label {
    display: block;
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: var(--space-1);
  }
  
  @media (max-width: 640px) {
    .hours__grid {
      flex-direction: column;
      gap: var(--space-6);
    }
    
    .hours__divider {
      transform: rotate(90deg);
    }
    
    .hours__block {
      width: 100%;
      max-width: none;
    }
    
    .hours__time {
      font-size: var(--text-lg);
    }
  }
</style>

