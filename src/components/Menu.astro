---
import siteData from '../data/site.json';

interface MenuItem {
  name: string;
  description: string;
  badge: string | null;
}

interface MenuCategory {
  category: string;
  items: MenuItem[];
}

const menuCategories: MenuCategory[] = siteData.menu;
---

<section class="menu section section--alt" aria-labelledby="menu-title" id="menu">
  <div class="container">
    <h2 id="menu-title" class="section__title">What We Pour</h2>
    
    <div class="menu__categories">
      {menuCategories.map((category, index) => (
        <div class="menu__category" data-category={index}>
          <button 
            class="menu__category-header"
            aria-expanded="true"
            aria-controls={`menu-panel-${index}`}
            id={`menu-button-${index}`}
          >
            <h3 class="menu__category-title">{category.category}</h3>
            <span class="menu__toggle" aria-hidden="true">
              <span class="menu__toggle-bar"></span>
              <span class="menu__toggle-bar"></span>
            </span>
          </button>
          
          <div 
            class="menu__panel"
            id={`menu-panel-${index}`}
            role="region"
            aria-labelledby={`menu-button-${index}`}
          >
            <ul class="menu__items" role="list">
              {category.items.map((item) => (
                <li class="menu__item">
                  <div class="menu__item-header">
                    <span class="menu__item-name">{item.name}</span>
                    {item.badge && (
                      <span class={`badge badge--${item.badge}`}>
                        {item.badge === 'featured' ? '★ Featured' : '⟡ Seasonal'}
                      </span>
                    )}
                  </div>
                  <p class="menu__item-desc">{item.description}</p>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .menu__categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
  }
  
  .menu__category {
    background-color: var(--color-bg-deep);
    border: 1px solid rgba(201, 162, 39, 0.15);
    border-radius: var(--radius-md);
    overflow: hidden;
  }
  
  .menu__category-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: var(--space-4) var(--space-5);
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background-color var(--transition-fast);
  }
  
  .menu__category-header:hover {
    background-color: rgba(201, 162, 39, 0.05);
  }
  
  .menu__category-header:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: -2px;
  }
  
  .menu__category-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-primary);
    margin: 0;
    letter-spacing: 0.05em;
  }
  
  .menu__toggle {
    position: relative;
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }
  
  .menu__toggle-bar {
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: var(--color-primary);
    top: 50%;
    left: 0;
    transition: transform var(--transition-fast);
  }
  
  .menu__toggle-bar:first-child {
    transform: translateY(-50%);
  }
  
  .menu__toggle-bar:last-child {
    transform: translateY(-50%) rotate(90deg);
  }
  
  .menu__category-header[aria-expanded="true"] .menu__toggle-bar:last-child {
    transform: translateY(-50%) rotate(0);
  }
  
  .menu__panel {
    overflow: hidden;
    transition: max-height var(--transition-normal), opacity var(--transition-normal);
    max-height: 500px;
    opacity: 1;
  }
  
  .menu__panel[aria-hidden="true"] {
    max-height: 0;
    opacity: 0;
  }
  
  .menu__items {
    list-style: none;
    padding: 0 var(--space-5) var(--space-5);
    margin: 0;
  }
  
  .menu__item {
    padding: var(--space-3) 0;
    border-bottom: 1px solid rgba(232, 228, 220, 0.08);
  }
  
  .menu__item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }
  
  .menu__item-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
    margin-bottom: var(--space-1);
  }
  
  .menu__item-name {
    font-weight: 600;
    color: var(--color-secondary);
  }
  
  .menu__item-desc {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
  }
  
  @media (max-width: 640px) {
    .menu__categories {
      grid-template-columns: 1fr;
    }
    
    .menu__category-title {
      font-size: var(--text-lg);
    }
  }
</style>

<script>
  // Accordion functionality
  document.addEventListener('DOMContentLoaded', () => {
    const categoryHeaders = document.querySelectorAll('.menu__category-header');
    
    categoryHeaders.forEach((header) => {
      header.addEventListener('click', () => {
        const expanded = header.getAttribute('aria-expanded') === 'true';
        const panelId = header.getAttribute('aria-controls');
        const panel = document.getElementById(panelId!);
        
        if (panel) {
          header.setAttribute('aria-expanded', String(!expanded));
          panel.setAttribute('aria-hidden', String(expanded));
        }
      });
    });
  });
</script>

