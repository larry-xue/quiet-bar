---
import siteData from '../data/site.json';
---

<header class="header" id="top">
  <div class="header__content">
    <a href="#top" class="header__logo" aria-label={`${siteData.name} - Return to top`}>
      <img 
        src="/images/logo.svg" 
        alt={siteData.shortName} 
        class="header__logo-img"
        width="200"
        height="60"
      />
    </a>
    <h1 class="header__title">{siteData.name}</h1>
    <p class="header__established">Est. {siteData.established}</p>
  </div>
  
  <div class="header__decoration" aria-hidden="true">
    <span class="header__line"></span>
    <span class="header__diamond">â—‡</span>
    <span class="header__line"></span>
  </div>
</header>

<style>
  .header {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-16) var(--space-4);
    position: relative;
    background: 
      radial-gradient(ellipse at center top, rgba(201, 162, 39, 0.08) 0%, transparent 50%),
      var(--color-bg-deep);
  }
  
  .header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23c9a227' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
  }
  
  .header__content {
    position: relative;
    z-index: 1;
  }
  
  .header__logo {
    display: inline-block;
    margin-bottom: var(--space-6);
    transition: transform var(--transition-normal);
  }
  
  .header__logo:hover {
    transform: scale(1.02);
  }
  
  .header__logo:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
  }
  
  .header__logo-img {
    display: block;
    height: auto;
    max-width: 100%;
  }
  
  .header__title {
    font-size: var(--text-4xl);
    font-weight: 700;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-secondary);
    margin-bottom: var(--space-4);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
  }
  
  .header__established {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-style: italic;
    color: var(--color-primary);
    letter-spacing: 0.1em;
  }
  
  .header__decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-top: var(--space-10);
    color: var(--color-primary);
  }
  
  .header__line {
    width: 80px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
  }
  
  .header__diamond {
    font-size: var(--text-lg);
    opacity: 0.8;
  }
  
  @media (max-width: 640px) {
    .header {
      min-height: 50vh;
      padding: var(--space-12) var(--space-4);
    }
    
    .header__title {
      font-size: var(--text-2xl);
      letter-spacing: 0.15em;
    }
    
    .header__established {
      font-size: var(--text-base);
    }
    
    .header__line {
      width: 50px;
    }
  }
</style>

