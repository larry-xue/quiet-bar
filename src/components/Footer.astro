---
import siteData from '../data/site.json';

const currentYear = new Date().getFullYear();
---

<footer class="footer" role="contentinfo">
  <div class="container">
    <div class="footer__content">
      <div class="footer__brand">
        <a href="#top" class="footer__logo" aria-label="Return to top">
          <span class="footer__logo-text">{siteData.shortName}</span>
        </a>
        <p class="footer__tagline">{siteData.tagline}</p>
      </div>
      
      <nav class="footer__nav" aria-label="Footer navigation">
        <a href="#menu" class="footer__link">Menu</a>
        <a href="#gallery" class="footer__link">Gallery</a>
        <a href="#location" class="footer__link">Location</a>
        <a href="#contact" class="footer__link">Contact</a>
      </nav>
      
      <div class="footer__back-to-top">
        <a href="#top" class="footer__top-btn" aria-label="Back to top">
          <span class="footer__top-arrow" aria-hidden="true">↑</span>
          <span class="footer__top-text">Top</span>
        </a>
      </div>
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">
        © {currentYear} {siteData.name}. All rights reserved.
      </p>
      <p class="footer__credits">
        Est. {siteData.established} · {siteData.address.short}
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding-block: var(--space-12) var(--space-8);
    background-color: var(--color-bg-mid);
    border-top: 1px solid rgba(201, 162, 39, 0.1);
  }
  
  .footer__content {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: var(--space-8);
    padding-bottom: var(--space-8);
    border-bottom: 1px solid rgba(232, 228, 220, 0.1);
    margin-bottom: var(--space-6);
  }
  
  .footer__brand {
    text-align: left;
  }
  
  .footer__logo {
    display: inline-block;
    text-decoration: none;
    margin-bottom: var(--space-2);
  }
  
  .footer__logo:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
  }
  
  .footer__logo-text {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-primary);
    letter-spacing: 0.1em;
  }
  
  .footer__tagline {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
    max-width: 250px;
  }
  
  .footer__nav {
    display: flex;
    gap: var(--space-6);
    justify-content: center;
  }
  
  .footer__link {
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
    position: relative;
  }
  
  .footer__link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -4px;
    width: 0;
    height: 1px;
    background-color: var(--color-primary);
    transition: width var(--transition-fast);
  }
  
  .footer__link:hover {
    color: var(--color-primary);
  }
  
  .footer__link:hover::after {
    width: 100%;
  }
  
  .footer__link:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
  }
  
  .footer__back-to-top {
    text-align: right;
  }
  
  .footer__top-btn {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-3);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .footer__top-btn:hover {
    color: var(--color-primary);
  }
  
  .footer__top-btn:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
  
  .footer__top-arrow {
    font-size: var(--text-xl);
    line-height: 1;
    animation: float 2s ease-in-out infinite;
  }
  
  .footer__top-text {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-4px); }
  }
  
  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-4);
  }
  
  .footer__copyright,
  .footer__credits {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .footer__content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--space-6);
    }
    
    .footer__brand {
      text-align: center;
    }
    
    .footer__tagline {
      max-width: none;
    }
    
    .footer__nav {
      flex-wrap: wrap;
      gap: var(--space-4);
    }
    
    .footer__back-to-top {
      text-align: center;
    }
    
    .footer__bottom {
      flex-direction: column;
      text-align: center;
    }
  }
  
  /* Account for fixed bottom bar on mobile */
  @media (max-width: 640px) {
    .footer {
      padding-bottom: var(--space-20);
    }
  }
</style>

