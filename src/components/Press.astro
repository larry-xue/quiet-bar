---
import siteData from '../data/site.json';

interface PressItem {
  source: string;
  quote: string;
  url: string | null;
}

const pressItems: PressItem[] = siteData.press;
---

<section class="press section section--alt" aria-labelledby="press-title" id="press">
  <div class="container container--narrow">
    <h2 id="press-title" class="section__title">What They Say</h2>
    
    <div class="press__grid">
      {pressItems.map((item) => (
        <article class="press__item">
          <blockquote class="press__quote">
            <p class="press__text">{item.quote}</p>
            <footer class="press__footer">
              <cite class="press__source">
                {item.url ? (
                  <a 
                    href={item.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="press__link"
                  >
                    — {item.source}
                    <span class="sr-only">(opens in new tab)</span>
                    <span class="press__external-icon" aria-hidden="true">↗</span>
                  </a>
                ) : (
                  <span>— {item.source}</span>
                )}
              </cite>
            </footer>
          </blockquote>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .press__grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }
  
  .press__item {
    position: relative;
    padding: var(--space-6);
    background-color: var(--color-bg-deep);
    border-left: 3px solid var(--color-primary);
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
  }
  
  .press__item::before {
    content: '"';
    position: absolute;
    top: var(--space-2);
    left: var(--space-4);
    font-family: var(--font-heading);
    font-size: 4rem;
    line-height: 1;
    color: var(--color-primary);
    opacity: 0.15;
  }
  
  .press__quote {
    margin: 0;
    padding: 0;
    border: none;
    position: relative;
    z-index: 1;
  }
  
  .press__text {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-style: italic;
    line-height: var(--leading-relaxed);
    color: var(--color-secondary);
    margin-bottom: var(--space-4);
  }
  
  .press__footer {
    display: flex;
    justify-content: flex-end;
  }
  
  .press__source {
    font-family: var(--font-body);
    font-style: normal;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  
  .press__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .press__link:hover {
    color: var(--color-primary);
  }
  
  .press__link:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
  
  .press__external-icon {
    font-size: var(--text-xs);
    opacity: 0.7;
  }
  
  @media (min-width: 768px) {
    .press__grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-6);
    }
    
    .press__item {
      display: flex;
      flex-direction: column;
    }
    
    .press__quote {
      display: flex;
      flex-direction: column;
      flex: 1;
    }
    
    .press__text {
      flex: 1;
    }
  }
  
  @media (max-width: 640px) {
    .press__item {
      padding: var(--space-4);
    }
    
    .press__text {
      font-size: var(--text-base);
    }
  }
</style>

