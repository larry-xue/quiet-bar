---
import siteData from '../data/site.json';
---

<section class="tagline" aria-label="Brand tagline">
  <div class="container container--narrow">
    <blockquote class="tagline__quote">
      <p class="tagline__text">{siteData.tagline}</p>
    </blockquote>
    
    <div class="tagline__decoration" aria-hidden="true">
      <span class="tagline__line"></span>
      <span class="tagline__icon">âœ¦</span>
      <span class="tagline__line"></span>
    </div>
  </div>
</section>

<style>
  .tagline {
    padding-block: var(--space-12);
    text-align: center;
    background: 
      linear-gradient(180deg, var(--color-bg-deep) 0%, var(--color-bg-mid) 50%, var(--color-bg-deep) 100%);
  }
  
  .tagline__quote {
    margin: 0;
    padding: 0;
    border: none;
  }
  
  .tagline__text {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-style: italic;
    font-weight: 400;
    line-height: var(--leading-relaxed);
    color: var(--color-secondary);
    margin: 0;
  }
  
  .tagline__text::before {
    content: '"';
    color: var(--color-primary);
    font-size: 1.5em;
    line-height: 0;
    vertical-align: -0.15em;
    margin-right: 0.1em;
  }
  
  .tagline__text::after {
    content: '"';
    color: var(--color-primary);
    font-size: 1.5em;
    line-height: 0;
    vertical-align: -0.15em;
    margin-left: 0.1em;
  }
  
  .tagline__decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-top: var(--space-8);
    color: var(--color-primary);
  }
  
  .tagline__line {
    width: 60px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
  }
  
  .tagline__icon {
    font-size: var(--text-base);
    opacity: 0.7;
  }
  
  @media (max-width: 640px) {
    .tagline {
      padding-block: var(--space-8);
    }
    
    .tagline__text {
      font-size: var(--text-lg);
    }
    
    .tagline__line {
      width: 40px;
    }
  }
</style>

