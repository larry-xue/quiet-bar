---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Header from '../components/Header.astro';
import InfoBar from '../components/InfoBar.astro';
import Footer from '../components/Footer.astro';
import siteData from '../data/site.json';

const pageTitle = `404 - Page Not Found | ${siteData.name}`;
const pageDescription = `The page you're looking for doesn't exist.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <Navbar />
  <Header />
  <InfoBar />
  
  <main id="main-content">
    <section class="error section" aria-labelledby="error-title">
      <div class="container container--narrow">
        <div class="error__content">
          <h1 id="error-title" class="error__title">404</h1>
          
          <div class="error__decoration" aria-hidden="true">
            <span class="error__line"></span>
            <span class="error__diamond">â—‡</span>
            <span class="error__line"></span>
          </div>
          
          <h2 class="error__subtitle">Page Not Found</h2>
          
          <p class="error__message">
            The page you're looking for doesn't exist or has been moved.
          </p>
          
          <div class="error__actions">
            <a href="/" class="btn">
              <span>Go Home</span>
            </a>
            <a href="/articles" class="btn btn--outline">
              <span>Browse Articles</span>
            </a>
          </div>
          
          <nav class="error__nav" aria-label="Quick links">
            <a href="#menu" class="error__link">Menu</a>
            <a href="#gallery" class="error__link">Gallery</a>
            <a href="#location" class="error__link">Location</a>
            <a href="#contact" class="error__link">Contact</a>
          </nav>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .error {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-16) var(--space-4);
  }
  
  .error__content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .error__title {
    font-size: var(--text-5xl);
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--space-6);
    line-height: var(--leading-tight);
    text-shadow: 0 2px 20px rgba(201, 162, 39, 0.3);
  }
  
  .error__decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin: var(--space-8) 0;
    color: var(--color-primary);
  }
  
  .error__line {
    width: 80px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
  }
  
  .error__diamond {
    font-size: var(--text-lg);
    opacity: 0.8;
  }
  
  .error__subtitle {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-secondary);
    margin-bottom: var(--space-6);
  }
  
  .error__message {
    font-size: var(--text-lg);
    color: var(--color-text);
    margin-bottom: var(--space-10);
    line-height: var(--leading-relaxed);
  }
  
  .error__actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-12);
  }
  
  .error__nav {
    display: flex;
    gap: var(--space-6);
    justify-content: center;
    flex-wrap: wrap;
    padding-top: var(--space-8);
    border-top: 1px solid rgba(201, 162, 39, 0.2);
  }
  
  .error__link {
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
    position: relative;
  }
  
  .error__link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -4px;
    width: 0;
    height: 1px;
    background-color: var(--color-primary);
    transition: width var(--transition-fast);
  }
  
  .error__link:hover {
    color: var(--color-primary);
  }
  
  .error__link:hover::after {
    width: 100%;
  }
  
  .error__link:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
  }
  
  @media (max-width: 768px) {
    .error {
      min-height: 50vh;
      padding: var(--space-12) var(--space-4);
    }
    
    .error__title {
      font-size: var(--text-4xl);
    }
    
    .error__subtitle {
      font-size: var(--text-2xl);
    }
    
    .error__actions {
      flex-direction: column;
      align-items: stretch;
    }
    
    .error__actions .btn {
      width: 100%;
    }
    
    .error__nav {
      flex-direction: column;
      gap: var(--space-4);
    }
  }
  
  @media (max-width: 640px) {
    .error__title {
      font-size: var(--text-3xl);
    }
    
    .error__subtitle {
      font-size: var(--text-xl);
    }
    
    .error__message {
      font-size: var(--text-base);
    }
    
    .error__line {
      width: 50px;
    }
  }
</style>

